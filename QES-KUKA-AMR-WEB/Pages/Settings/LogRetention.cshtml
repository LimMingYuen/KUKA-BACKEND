@page
@model QES_KUKA_AMR_WEB.Pages.Settings.LogRetentionModel
@{
    ViewData["Title"] = "Log Retention Settings";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Log Retention Settings</h5>
            <form method="post" asp-page-handler="RunCleanup" class="m-0 ms-3">
                <button type="submit" class="btn btn-light btn-sm">
                    <i class="bi bi-trash"></i> Run Cleanup Now
                </button>
            </form>
        </div>

        <div class="card-body">
            <p class="text-muted mb-3">
                Configure how long log folders should be retained. The system will always keep at least one full additional month to ensure the previous month's logs remain accessible.
            </p>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-
    @Model.StatusType"> @Model.StatusMessage
                </div>
            } 

            <form method="post">
                <div class="mb-3">
                    <label for="RetentionMonths" class="form-label">
                        Keep logs for (months):
                    </label>
                    <input type="number"
                           id="RetentionMonths"
                           name="RetentionMonths"
                           class="form-control w-auto d-inline-block"
                           min="1"
                           max="12"
                           value="@Model.RetentionMonths" />
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Setting
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional small UX touch
        document.addEventListener("DOMContentLoaded", function () {
            const alertBox = document.querySelector(".alert");
            if (alertBox) {
                setTimeout(() => alertBox.classList.add("fade"), 3000);
                }
                });
    </script>
}