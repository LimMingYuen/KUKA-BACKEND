@using System.Text.Json
@using QES_KUKA_AMR_API.Data
@inject ApplicationDbContext _db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QES AMR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="dashboard-body">
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <button class="sidebar-toggle" id="sidebarToggle" title="Toggle Sidebar">
                    <span class="toggle-icon">&#9776;</span>
                </button>
                <span class="logo-text">QES</span>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-item">
                    <a href="#" class="nav-link" id="mainMenuToggle">
                        <span class="nav-icon">&#9776;</span>
                        <span class="nav-text">Main</span>
                        <span class="nav-arrow">&#9662;</span>
                    </a>
                    <div class="submenu" id="mainSubmenu">
                        @{
                            var roleNamesJson = Context.Session.GetString("Role");
                            var username = Context.Session.GetString("Username") ?? "";
                            var accessiblePages = new List<QES_KUKA_AMR_API.Data.Entities.Page>();
                            var isAdmin = false;

                            // Debug: Show session data
                            System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] Username: {username}");
                            System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] RoleNamesJson: {roleNamesJson ?? "NULL"}");

                            // TEMPORARY BYPASS: If username is "admin", show all pages
                            // This allows first-time setup before user sync
                            if (username.Equals("admin", StringComparison.OrdinalIgnoreCase))
                            {
                                isAdmin = true;
                                accessiblePages = _db.Pages.OrderBy(p => p.Id).ToList();
                                System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] Temporary admin bypass for '{username}' - Loaded {accessiblePages.Count} pages");
                            }
                            else if (!string.IsNullOrEmpty(roleNamesJson))
                            {
                                List<string> roleNames = new List<string>();
                                try
                                {
                                    // Try to deserialize as JSON array
                                    roleNames = JsonSerializer.Deserialize<List<string>>(roleNamesJson) ?? new List<string>();
                                }
                                catch (JsonException)
                                {
                                    // Fallback: if stored as a single string instead of JSON array
                                    roleNames = new List<string> { roleNamesJson };
                                }
                                catch (Exception ex)
                                {
                                    // Log unexpected errors but continue with empty list
                                    Console.WriteLine($"Error parsing role names: {ex.Message}");
                                    roleNames = new List<string>();
                                }

                                System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] Parsed Roles: {string.Join(", ", roleNames)}");

                                // Check if user is admin (case-insensitive check for admin/administrator)
                                isAdmin = roleNames.Any(r => r.Equals("Admin", StringComparison.OrdinalIgnoreCase) 
                                                          || r.Equals("Administrator", StringComparison.OrdinalIgnoreCase));

                                System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] Is Admin: {isAdmin}");

                                if (isAdmin)
                                {
                                    // Admin gets all pages - no permission check needed
                                    accessiblePages = _db.Pages
                                        .OrderBy(p => p.Id)
                                        .ToList();
                                    
                                    System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] Admin - Loaded {accessiblePages.Count} pages");
                                }
                                else if (roleNames.Any())
                                {
                                    // Non-admin users get pages based on role permissions
                                    accessiblePages = (from rp in _db.RolePermissions
                                                       join r in _db.Roles on rp.RoleId equals r.Id
                                                       join p in _db.Pages on rp.PageId equals p.Id
                                                       where roleNames.Contains(r.Name)
                                                       select p)
                                    .Distinct()
                                    .OrderBy(p => p.Id)
                                    .ToList();
                                    
                                    System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] Non-Admin - Loaded {accessiblePages.Count} pages");
                                }
                            }
                            else
                            {
                                System.Diagnostics.Debug.WriteLine("[SIDEBAR DEBUG] No role session data found!");
                            }

                            System.Diagnostics.Debug.WriteLine($"[SIDEBAR DEBUG] Final page count: {accessiblePages.Count}");

                            @if (accessiblePages.Any())
                            {
                                @foreach (var aPage in accessiblePages)
                                {
                                    <a href="@aPage.PagePath" class="submenu-link">@aPage.PageName</a>
                                }
                            }
                            else
                            {
                                <span style="color:gray; padding:5px;">No pages available</span>
                                <!-- Debug info for user -->
                                <span style="color:red; padding:5px; display:block; font-size:10px;">
                                    Debug: User=@username | Role=@(roleNamesJson ?? "null") | Pages in DB: @_db.Pages.Count()
                                </span>
                            }
                        }
                    </div>
                </div>
            </nav>

            <div class="sidebar-footer">
                <a href="/Login" class="nav-link logout-link">
                    <span class="nav-icon">&#8592;</span>
                    <span class="nav-text">Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <header class="dashboard-header">
                <div class="header-left">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                <div class="header-right">
                    <div class="user-info">
                        <span class="user-label">User:</span>
                        <span class="user-value">@Context.Session.GetString("Username")</span>
                    </div>
                    <div class="user-info">
                        <span class="user-label">Role:</span>
                        <span class="user-value">
                            @(JsonSerializer.Deserialize<string[]>(Context.Session.GetString("Role") ?? "[]").FirstOrDefault() ?? "")
                        </span>
                    </div>
                </div>
            </header>

            <main class="dashboard-main">
                @RenderBody()
            </main>

            <footer class="dashboard-footer">
                <div class="footer-content">
                    &copy; 2025 - AMR HMI - <a href="#" class="footer-link">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
